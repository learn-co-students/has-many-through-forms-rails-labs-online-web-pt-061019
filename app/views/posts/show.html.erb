<h1><%= @post.title %></h1>

<p><%= @post.content %></p>


<h2>Categories</h2>
<%= @post.categories.each do |cat| %>
  <%= cat.name %>
<% end  %>

<h2>Comments</h2>
<%= @post.comments.each do |c| %>
  <%= c.content %>
<% end  %>

<h2>Users who Commented</h2>
<%= @post.comments.each do |u| %>
  <%= u %>
<% end  %>

<h3>New Comment</h3>

<%= form_for @post.comments.build do |f|%>
  <%= f.hidden_field :post_id, value: @post.id %>

  <%= f.label :content %>
  <%= f.text_field :content %>

<% end %>
