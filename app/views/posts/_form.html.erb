<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <strong>Categories</strong>
  <p>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  </p>

  <p>
    <%= f.fields_for :categories, @post.categories.build do |c| %>
      <%= c.label "Other" %><br>
      <%= c.text_field :name %>
    <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>